<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.biblio.controller.PCsController" spacing="8">
    <padding><Insets topRightBottomLeft="10"/></padding>

    <HBox spacing="8">
        <TextField fx:id="etiquetaField" promptText="Etiqueta (ej. PC-13)"/>
        <Button text="Agregar" onAction="#agregar"/>
        <Button text="Activar" onAction="#activar"/>
        <Button text="Desactivar" onAction="#desactivar"/>
        <Label fx:id="msgLabel"/>
    </HBox>

    <TableView fx:id="tabla" prefHeight="500">
        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="60"/>
            <TableColumn text="Etiqueta" fx:id="colEtiqueta" prefWidth="200"/>
            <TableColumn text="Activo" fx:id="colActivo" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
