<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.biblio.controller.RegistrarVisitaController" spacing="10">
    <padding><Insets topRightBottomLeft="10"/></padding>

    <TitledPane text="Alta rápida / Búsqueda" expanded="true">
        <content>
            <HBox spacing="8">
                <padding><Insets topRightBottomLeft="10"/></padding>
                <TextField fx:id="numControlField" promptText="Num. control"/>
                <TextField fx:id="nombreField" promptText="Nombre"/>
                <TextField fx:id="generoField" promptText="Género"/>
                <TextField fx:id="carreraField" promptText="Carrera"/>
                <Button text="Guardar/Usar" onAction="#altaRapida"/>
                <Label fx:id="altaMsg"/>
            </HBox>
        </content>
    </TitledPane>

    <TitledPane text="Servicios" expanded="true">
        <content>
            <GridPane hgap="10" vgap="8">
                <padding><Insets topRightBottomLeft="10"/></padding>
                <CheckBox fx:id="servPcCheck" text="Uso de computadora con internet"/>
                <Label text="PC:" GridPane.columnIndex="1"/>
                <ComboBox fx:id="pcCombo" GridPane.columnIndex="2" prefWidth="140"/>

                <CheckBox fx:id="consultaSalaCheck" text="Consulta en sala" GridPane.rowIndex="1"/>
                <CheckBox fx:id="lecturaSalaCheck" text="Préstamo/lectura en sala" GridPane.rowIndex="2"/>
                <CheckBox fx:id="trabajoPersonalCheck" text="Trabajo personal" GridPane.rowIndex="3"/>
                <CheckBox fx:id="trabajoEquipoCheck" text="Trabajo en equipo" GridPane.rowIndex="4"/>
                <Label text="Tamaño grupo:" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <ComboBox fx:id="tamEquipoCombo" GridPane.rowIndex="4" GridPane.columnIndex="2" prefWidth="80" visible="false" managed="false"/>

                <Label text="Observación:" GridPane.rowIndex="5"/>
                <TextField fx:id="obsField" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
            </GridPane>
        </content>
    </TitledPane>
    <VBox fx:id="integrantesBox" spacing="5" visible="false" managed="false"/>

    <HBox spacing="10">
        <Button text="Registrar Visita" onAction="#registrarVisita"/>
        <Label fx:id="regMsg"/>
    </HBox>
</VBox>
