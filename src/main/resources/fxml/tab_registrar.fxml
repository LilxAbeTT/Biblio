<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.biblio.controller.RegistrarVisitaController" spacing="10">
    <padding><Insets topRightBottomLeft="10"/></padding>

    <TitledPane text="Alta rápida / Búsqueda" expanded="true">
        <content>
            <HBox spacing="8">
                <padding><Insets topRightBottomLeft="10"/></padding>
                <TextField fx:id="numControlField" promptText="Num. control"/>
                <TextField fx:id="nombreField" promptText="Nombre"/>
                <TextField fx:id="generoField" promptText="Género"/>
                <TextField fx:id="carreraField" promptText="Carrera"/>
                <Button text="Guardar/Usar" onAction="#altaRapida"/>
                <Label fx:id="altaMsg"/>
            </HBox>
        </content>
    </TitledPane>

    <TitledPane text="Servicios" expanded="true">
        <content>
            <VBox spacing="10">
                <padding><Insets topRightBottomLeft="10"/></padding>

                <!-- Tipo de trabajo -->
                <VBox spacing="8">
                    <HBox spacing="8">
                        <CheckBox fx:id="trabajoPersonalCheck" text="Trabajo personal"/>
                        <CheckBox fx:id="trabajoEquipoCheck" text="Trabajo en equipo"/>
                        <ComboBox fx:id="tamEquipoCombo" visible="false" managed="false">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <Integer>2</Integer>
                                    <Integer>3</Integer>
                                    <Integer>4</Integer>
                                    <Integer>5</Integer>
                                    <Integer>6</Integer>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </HBox>
                    <VBox fx:id="integrantesBox" spacing="5" visible="false" managed="false"/>
                </VBox>

                <!-- Tipo de servicio -->
                <VBox spacing="8">
                    <CheckBox fx:id="consultaRapidaCheck" text="Consulta rápida"/>
                    <CheckBox fx:id="lecturaSalaCheck" text="Lectura en sala"/>
                    <HBox spacing="8">
                        <CheckBox fx:id="servPcCheck" text="Uso de computadora de internet"/>
                        <ComboBox fx:id="pcCombo" prefWidth="140"/>
                    </HBox>
                </VBox>

                <TextArea fx:id="obsField" promptText="Observaciones"/>
            </VBox>
        </content>
    </TitledPane>

    <HBox spacing="10">
        <Button fx:id="registrarBtn" text="Registrar Visita" onAction="#registrarVisita"/>
        <Button fx:id="limpiarTodoBtn" text="Limpiar todo" onAction="#limpiarFormulario"/>
        <Label fx:id="regMsg"/>
    </HBox>
</VBox>
